@model Cms.Webshop.Models.Structures
<script id="filterTemplate" type="text/x-jquery-tmpl">
	<div>
		<b>{{=Name}}</b> ({{=Id}})
	</div>
</script> 
<script type="text/javascript">

	var manufacturers = [
		{ Name: "The Red Violin", Id: "1998" },
		{ Name: "Eyes Wide Shut", Id: "1999" },
		{ Name: "The Inheritance", Id: "1976" }
	];



    // Render the template with the movies data and insert
    // the rendered HTML under the "movieList" element
    $("#manufacturer").html(
		$("#filterTemplate").render(manufacturers)
	);
</script>

<div id="manufacturer"></div>

<div id="cus_jellegtomb">
    <div id="cus_gyarto">
        @foreach (var manufacturer in @Model.Manufacturers)
        {
        <input type="checkbox" name="1" id="@manufacturer.Id" /> 
        <a href="#linkide">@manufacturer.Name </a>
        }
    </div>
    <hr/>
    <div id="cus_jelleg1">
        @foreach (var category1 in @Model.FirstLevelCategories)
        {
        <input type="checkbox" name="1" id="@category1.Id" /> 
        <a href="#linkide">@category1.Name </a>
        }
    </div>
    <hr/>
    <div id="cus_jelleg2">
        @foreach (var category2 in @Model.SecondLevelCategories)
        {
        <input type="checkbox" name="1" id="@category2.Id" /> 
        <a href="#linkide">@category2.Name </a>
        }
    </div>
    <hr/>
    <div id="cus_paraszuro">
        @foreach (var category3 in @Model.ThirdLevelCategories)
        {
        <input type="checkbox" name="1" id="@category3.Id" /> 
        <a href="#linkide">@category3.Name </a>
        }
    </div>
</div>
